<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:id="@+id/mainlayout"
    android:minWidth="1000dp"
    android:minHeight="400dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/myPrimaryDarkColor">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_launcher"/>

        <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Eschoola"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_centerInParent="true"/>

        <ImageView
                android:id="@+id/quit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/skipbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:src="@drawable/error"/>


    </LinearLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/facebook_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        app:fb_radius="70dp"
        app:fb_iconPosition="right"
        app:fb_fontIconSize="30sp"
        app:fb_iconPaddingRight="20dp"
        app:fb_iconPaddingLeft="20dp"
        app:fb_textSize="16sp"
        app:fb_text="Login with Facebook"
        app:fb_textColor="#ffffff"
        app:fb_defaultColor="#39579B"
        app:fb_focusColor="#6183d2"
        app:fb_fontIconResource="&#xf230;"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/twitter_login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:fb_radius="70dp"
        app:fb_iconPosition="right"
        app:fb_fontIconSize="30sp"
        app:fb_iconPaddingRight="20dp"
        app:fb_iconPaddingLeft="20dp"
        app:fb_textSize="16sp"
        app:fb_text="Login with Twitter    "
        app:fb_textColor="#ffffff"
        app:fb_defaultColor="#4BC5FF"
        app:fb_focusColor="#6183d2"
        app:fb_fontIconResource="&#xf099;"/>

    <LinearLayout
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/rounded_button">

        <TextView
                android:id="@+id/logintext"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Login with Email    "
                  android:textColor="@color/myDrawerBackground"
                  android:textSize="16sp"/>

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:src="@drawable/envelope"/>

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="50dp"
                  android:gravity="center">


    <Button
                android:id="@+id/registrationbutton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:background="@drawable/roundedsociallogin"
                android:textColor="@color/myPrimaryDarkColor"
                android:text="Register Now"
                android:layout_gravity="center"/>

        <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:id="@+id/donthavetext"
                android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:textSize="16sp"
                                                        android:textColor="@color/myPrimaryDarkColor"
                                                        android:layout_gravity="center"
                                                        android:text="Dont have an account ?"/>

    </LinearLayout>


    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="#e3e3e3"
          android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"/>


    <com.amirahmed.eschoola.Utiles.TextViewWithFont
            android:id="@+id/skiptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="Skip this Step"/>



</LinearLayout>