<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/toolbar_actionbar_en"
        layout="@layout/toolbar_default_en"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="20dp">

        <LinearLayout
            android:id="@+id/containerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_bluecurve"
            android:orientation="horizontal">



                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/schoollogo"
                    android:padding="1dp"
                    android:background="@drawable/roundedgraynew"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <com.amirahmed.eschoola.Utiles.TextViewWithFont
                    android:id="@+id/schoolname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginBottom="5dp"
                    android:text="مدرسة العلم العالمية"/>

                <com.amirahmed.eschoola.Utiles.TextViewWithFont
                        android:id="@+id/schoollevels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="دولية | جميع المراحل"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/male_90x90"/>

                    <ImageView
                            android:id="@+id/female"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/girl_90x90"/>

                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/daytime_90x90"/>

                    <ImageView
                            android:id="@+id/moon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/night_90x90"/>

                    <ImageView
                            android:id="@+id/certificate"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="5dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/acswascapproved_90x90"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Term Number 1"/>

            <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Term Number 2"/>

            <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Term Number 3"/>

            <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Term Number 4"/>

            <com.amirahmed.eschoola.Utiles.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Term Number 5"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>