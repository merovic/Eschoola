<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:orientation="horizontal"
			android:background="@color/myPrimaryDarkColor">

		<ImageView
				android:id="@+id/logo"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_centerVertical="true"
				android:src="@mipmap/ic_launcher"/>

		<com.amirahmed.eschoola.Utiles.TextViewWithFont
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Add a Kid"
				android:textSize="20sp"
				android:textColor="#FFF"
				android:layout_centerInParent="true"/>

		<ImageView
				android:id="@+id/quit"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_centerVertical="true"
				android:layout_alignParentEnd="true"
				android:layout_marginEnd="5dp"/>

	</RelativeLayout>


	<com.amirahmed.eschoola.Utiles.TextViewWithFont
			android:id="@+id/titledialog"
			android:layout_width="match_parent"
													android:layout_height="wrap_content"
	android:text="Do you already add your son on Eschoola ?"
	android:textSize="18sp"
	android:gravity="center"
	android:layout_marginTop="10dp"/>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
				  android:layout_margin="8dp"
	android:orientation="horizontal">

		<Button
				android:id="@+id/nobutton"
				android:layout_width="120dp"
				android:layout_height="40dp"
				android:text="No"
				android:layout_margin="10dp"
				android:textColor="@color/myDrawerBackground"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:background="@drawable/rounded_button"/>

		<Button
				android:id="@+id/yesbutton"
				android:layout_width="120dp"
				android:layout_height="40dp"
				android:text="Yes"
				android:textColor="@color/myDrawerBackground"
				android:layout_gravity="center"
				android:layout_margin="10dp"
				android:layout_weight="1"
				android:background="@drawable/rounded_button"/>

	</LinearLayout>

</LinearLayout>