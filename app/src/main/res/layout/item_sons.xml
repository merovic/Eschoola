<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_marginLeft="10dp"
			  android:layout_marginRight="10dp"
			  android:layout_marginBottom="5dp"
			  android:layout_marginTop="5dp"
			  android:id="@+id/container"
android:background="@drawable/rounded_bluecurve">

	<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/sonpic"
			android:layout_width="65dp"
			android:layout_height="65dp"
			android:layout_margin="5dp"
	android:src="@drawable/kidround"/>

	<LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
				  android:layout_margin="10dp"
				  android:layout_weight="1"
				  android:orientation="vertical">

		<com.amirahmed.eschoola.Utiles.TextViewWithFont
				android:id="@+id/sonname"
				android:layout_width="wrap_content"
														android:layout_height="wrap_content"
														android:textSize="18sp"
														android:textStyle="bold"
														android:layout_weight="1"
														android:textColor="@color/myPrimaryDarkColor"
		android:text="Layla Asfer"/>

		<com.amirahmed.eschoola.Utiles.TextViewWithFont
				android:id="@+id/sonlevel"
				android:layout_width="wrap_content"
														android:layout_height="wrap_content"
														android:layout_weight="1"
														android:text="KG2"/>

	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
				  android:layout_gravity="center"
				  android:layout_marginRight="10dp"
				  android:layout_marginLeft="10dp"
	android:orientation="horizontal">

		<ImageView
				android:id="@+id/edit"
				android:layout_width="25dp" android:layout_height="25dp"
				   android:layout_marginLeft="10dp"
				   android:layout_marginRight="10dp"
		android:src="@drawable/edit_90x90"/>

		<ImageView
				android:id="@+id/delete"
				android:layout_width="25dp" android:layout_height="25dp"
				   android:src="@drawable/delete_90x90"/>

	</LinearLayout>

</LinearLayout>